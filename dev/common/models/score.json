{
  "name": "Score",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "score": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "name": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "register": {
      "accepts": [
        {
          "arg": "name",
          "type": "string",
          "required": true,
          "description": "the name of the user who score this",
          "http": {
            "source": "form"
          }
        },
        {
          "arg": "score",
          "type": "number",
          "required": true,
          "description": "the score of the user",
          "http": {
            "source": "form"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "array",
          "root": true,
          "description": "the list of the best scores"
        }
      ],
      "description": "register the score and return an array of score",
      "http": [
        {
          "path": "/register",
          "verb": "post"
        }
      ]
    }
  }
}